<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/v4dp"
    android:layout_marginRight="@dimen/v4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_first_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/v4dp"
            android:padding="@dimen/v8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/v12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/v4dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/v8dp"
            android:background="@drawable/bg_black" />

        <TextView
            android:id="@+id/text_view_second_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/v4dp"
            android:padding="@dimen/v8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/v12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/v4dp"
        android:background="@drawable/bg_black" />
</LinearLayout>